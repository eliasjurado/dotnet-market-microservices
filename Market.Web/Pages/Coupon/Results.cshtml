@model Market.Web.Pages.Coupon.IndexModel

@if (Model.Results is { } coupons)
{
    @foreach (var coupon in coupons)
    {
        <tr>
            <td class="text-start">@coupon.Id</td>
            <td class="text-start">@coupon.Code</td>
            <td class="text-start">@coupon.Name</td>
            <td class="text-end">@Convert.ToDecimal(string.Format("{0:0.00}", coupon.DisccountAmount))</td>
            <td class="text-end">@Convert.ToDecimal(string.Format("{0:0.00}", coupon.MinAmmount))</td>
            <td class="text-end">@coupon.StartDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td class="text-end">@coupon.EndDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td class="text-center">
                <button hx-get
                        hx-page="Index"
                        hx-page-handler="UpdateModal"
                        hx-route-id=@coupon.Id
                        hx-target="#modal-container"
                        class="btn-sm border-0 bg-transparent"
                        style="font-size:1.1rem">
                    <img src="~/img/pen.svg" alt="pen" width="16" />
                </button>
                <button hx-get
                        hx-page="Index"
                        hx-page-handler="DeleteModal"
                        hx-route-id=@coupon.Id
                        hx-target="#modal-container"
                        class="btn-sm border-0 bg-transparent"
                        style="font-size:1.1rem">
                    <img src="~/img/trash.svg" alt="trash" width="16" />
                </button>
            </td>
        </tr>
    }
}
@if (!Model.Results.Any())
{
    <tr>
        <td colspan="8">No Results for "@Model.Query"</td>
    </tr>
}