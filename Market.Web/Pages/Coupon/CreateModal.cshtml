@model IndexModel
<div id="modal-backdrop" class="modal-backdrop fade show"></div>
<div id="my-modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div id="modal-body" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Coupon</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close" onclick="closeModal()">
                </button>
            </div>
            <div class="modal-body">
                <form id="myForm" method="post" asp-page-handler="Save" asp-route-id=@Model.RequestDto.Id>
                    <div class="mb-3">
                        <label class="form-label" asp-for="RequestDto.Code">Code</label>
                        <div><input class="form-control" asp-for="RequestDto.Code" required="required" /></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="RequestDto.Name">Name</label>
                        <div><input class="form-control" asp-for="RequestDto.Name" required="required" /></div>
                    </div>
                    <div class="mb-3 ">
                        <label class="form-label" asp-for="RequestDto.DisccountAmount">Disccount (%)</label>
                        <div><input type="number" step='0.01' value='0.00' min="0" max="100" class="input-group-sm form-control text-sm-end" asp-for="RequestDto.DisccountAmount" required="required" /></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="RequestDto.MinAmmount">MinAmmount ($)</label>
                        <div><input type="number" step='0.01' value='0.00' min="0" class="input-group-sm form-control text-sm-end" asp-for="RequestDto.MinAmmount" required="required" /></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="RequestDto.StartDate">Start Date</label>
                        <div><input type="datetime-local" class="form-control" asp-for="RequestDto.StartDate" required="required" /></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="RequestDto.EndDate">End Date</label>
                        <div><input type="datetime-local" class="form-control" asp-for="RequestDto.EndDate" required="required" /></div>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="closeModal()">
                    Cancel
                </button>
                <button form="myForm"
                        type="submit"
                        class="btn btn-dark">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    showModal()
</script>


