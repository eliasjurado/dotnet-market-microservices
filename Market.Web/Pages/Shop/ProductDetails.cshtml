@page "/shop/{id:int}"
@model IndexModel

<form method="post">
    <input asp-for="@Model.Product.Id" hidden />
    <div class=" pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header bg-secondary text-light row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Product.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-white"> @string.Format("{0:c}", Model.Product.Price)</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.Product.ImageUrl" class="rounded img-fluid img-thumbnail" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12">
                                    <span class="badge bg-dark bg-opacity-75 text-white p-3 border">@Model.Product.CategoryName</span>
                                    <p class="text-secondary pt-3">@Html.Raw(Model.Product.Description)</p>
                                </div>
                                <div class="row flex-wrap align-items-center">
                                    <div class="w-auto">
                                        <label class="fw-bold">Quantity</label>
                                    </div>
                                    <div class="w-25">
                                        <input asp-for="ShopQuantity" class="form-control" />
                                        <span asp-validation-for="ShopQuantity" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row bg-dark bg-opacity-10">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-secondary btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                </div>
                <div class="col-12 col-md-6">
                    <button type="submit" class="btn btn-dark form-control btn-lg" style="height:50px"><img src="~/img/plus.svg" class="btn-close-white" /> Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

